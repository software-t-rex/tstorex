{
	"name": "@t-rex.software/tstorex",
	"version": "0.0.1",
	"description": "An agnostic, dependence free, state management library",
	"type": "module",
	"files": [
		"dist"
	],
	"module": "dist/tstorex.js",
	"main": "dist/tstorex.cjs",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/tstorex.js",
			"require": "./dist/tstorex.cjs"
		},
		"./recipes": {
			"types": "./dist/types/recipes/index.d.ts",
			"import": "./dist/recipes.js",
			"require": "./dist/recipes.cjs"
		}
	},
	"scripts": {
		"test": "vitest --watch=false",
		"build": "rm -rf dist && tsc && vite build && tsc -p tsconfig.dts.json"
	},
	"keywords": [
		"state",
		"store",
		"state management",
		"state container",
		"state manager",
		"state store",
		"state management library",
		"state container library",
		"state manager library",
		"state store library",
		"reactive state management"
	],
	"devDependencies": {
		"@types/node": "^18.16.0",
		"@vitest/coverage-c8": "^0.31.1",
		"happy-dom": "^10.11.2",
		"typescript": "^5.0.4",
		"vite": "^4.3.2",
		"vite-plugin-dts": "^2.3.0",
		"vitest": "^0.30.1"
	},
	"author": "Jonathan Gotti <jgotti at jgotti dot org>",
	"license": "MIT"
}
